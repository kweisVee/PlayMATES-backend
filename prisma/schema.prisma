generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  USER
  ADMIN
}

enum SkillLevel {
  ALL
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

model User {
  id        Int         @id @default(autoincrement())
  firstName String
  lastName  String
  username  String      @unique
  email     String      @unique
  password  String
  city      String?
  state     String?
  country   String?
  role      Role        @default(USER)  
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  lastLogin DateTime    @default(now())

  createdSports Sport[] @relation("UserCreatedSports")
  meetups      Meetup[] // One User can create many Meetups
  updatedMeetups Meetup[] @relation("MeetupUpdatedBy")
  participantMeetups MeetupParticipant[] // Many-to-many relationship for participants
}

model Sport {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  definition  String?
  imageUrl    String?   // NEW: URL to sport icon/image
  category    String?   // NEW: Sport category (e.g., "Team Sport", "Racquet Sport")
  isActive    Boolean   @default(true)
  createdBy   Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  creator     User     @relation("UserCreatedSports", fields: [createdBy], references: [id])
  meetups     Meetup[] // One Sport can have many Meetups
  
  /* 
  Why do I need createdBy Int and creator User?
  This is the foreign key column in the database. It stores the ID of the user who created the sport. It's just a number.
  creator User @relation(...)
  This tells Prisma how to link the createdBy ID to a User record, so you can write code like:

  const sport = await prisma.sport.findFirst({
    include: { creator: true }
  });
  console.log(sport.creator.firstName);
  Without the creator relation, you can't fetch the related User object â€” only the numeric ID (createdBy).
  */
}

model Meetup {
  id              Int       @id @default(autoincrement())
  title           String
  description     String?
  maxParticipants Int
  sportId         Int
  createdBy       Int
  location        String?
  city            String?
  state           String?
  scheduledAt     DateTime
  sportIcon       String?
  sportColor      String?
  skillLevel      SkillLevel @default(ALL)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt //updatedAt is already handled by Prisma so it will update when its created or updated
  updatedBy       Int 

  sport      Sport     @relation(fields: [sportId], references: [id])
  creator    User      @relation(fields: [createdBy], references: [id])
  updater    User      @relation("MeetupUpdatedBy", fields: [updatedBy], references: [id])
  participants MeetupParticipant[] // Many-to-many relationship for participants

  @@index([createdBy]) // Index for getUserHostedMeetups queries
  @@index([scheduledAt]) // Index for filtering and ordering by date
  @@index([sportId]) // Index for filtering by sport
}

model MeetupParticipant {
  id        Int      @id @default(autoincrement())
  userId    Int
  meetupId  Int
  joinedAt  DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  meetup  Meetup  @relation(fields: [meetupId], references: [id], onDelete: Cascade)

  @@unique([userId, meetupId]) // Prevent duplicate participants
  @@index([meetupId])
  @@index([userId])
}